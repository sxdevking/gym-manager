<UserControl x:Class="GymManager.WPF.Views.Memberships.MembershipsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/FluentStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#15FFFFFF" Padding="28,20" CornerRadius="0,0,12,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Membresias" Style="{StaticResource FluentTitle}"/>
                    <TextBlock Text="Gestiona las membresias de los miembros" 
                               Style="{StaticResource FluentSubtitle}" Margin="0,4,0,0"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="+ Nueva Membresia"
                        Command="{Binding NewMembershipCommand}"
                        Style="{StaticResource FluentButtonSuccess}"
                        Padding="20,12"/>
            </Grid>
        </Border>

        <!-- STATS CARDS -->
        <Grid Grid.Row="1" Margin="28,20,28,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total -->
            <Border Grid.Column="0" Style="{StaticResource FluentCard}" Padding="20">
                <StackPanel>
                    <TextBlock Text="📊" FontSize="24"/>
                    <TextBlock Text="{Binding TotalCount}" FontSize="32" FontWeight="Bold" Foreground="#FFFFFF" Margin="0,8,0,0"/>
                    <TextBlock Text="Total Membresias" Foreground="#80FFFFFF" FontSize="12"/>
                </StackPanel>
            </Border>

            <!-- Activas -->
            <Border Grid.Column="2" Style="{StaticResource FluentCard}" Padding="20" Background="#2010B981">
                <StackPanel>
                    <TextBlock Text="✅" FontSize="24"/>
                    <TextBlock Text="{Binding ActiveCount}" FontSize="32" FontWeight="Bold" Foreground="#34D399" Margin="0,8,0,0"/>
                    <TextBlock Text="Activas" Foreground="#80FFFFFF" FontSize="12"/>
                </StackPanel>
            </Border>

            <!-- Por Vencer -->
            <Border Grid.Column="4" Style="{StaticResource FluentCard}" Padding="20" Background="#20F59E0B">
                <StackPanel>
                    <TextBlock Text="⚠️" FontSize="24"/>
                    <TextBlock Text="{Binding ExpiringCount}" FontSize="32" FontWeight="Bold" Foreground="#FBBF24" Margin="0,8,0,0"/>
                    <TextBlock Text="Por Vencer (7 dias)" Foreground="#80FFFFFF" FontSize="12"/>
                </StackPanel>
            </Border>

            <!-- Vencidas -->
            <Border Grid.Column="6" Style="{StaticResource FluentCard}" Padding="20" Background="#20EF4444">
                <StackPanel>
                    <TextBlock Text="⏰" FontSize="24"/>
                    <TextBlock Text="{Binding ExpiredCount}" FontSize="32" FontWeight="Bold" Foreground="#F87171" Margin="0,8,0,0"/>
                    <TextBlock Text="Vencidas" Foreground="#80FFFFFF" FontSize="12"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- CONTENT -->
        <Grid Grid.Row="2" Margin="28,20,28,28">
            <Border Style="{StaticResource FluentCard}" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Toolbar -->
                    <Border Grid.Row="0" Background="#10FFFFFF" Padding="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Busqueda -->
                            <TextBox Grid.Column="0"
                                     Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FluentTextBox}"
                                     Tag="🔍 Buscar miembro o plan..."/>

                            <!-- Filtro Estado -->
                            <ComboBox Grid.Column="2"
                                      ItemsSource="{Binding StatusFilters}"
                                      SelectedItem="{Binding FilterStatus, Mode=TwoWay}"
                                      Style="{StaticResource FluentComboBox}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Foreground="#FFFFFF">
                                            <TextBlock.Text>
                                                <Binding Converter="{StaticResource StatusToTextConverter}" FallbackValue="Todos"/>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <!-- Refresh -->
                            <Button Grid.Column="4"
                                    Content="🔄 Actualizar"
                                    Command="{Binding RefreshCommand}"
                                    Style="{StaticResource FluentButton}"/>
                        </Grid>
                    </Border>

                    <!-- DataGrid -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Memberships}"
                              SelectedItem="{Binding SelectedMembership}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              Background="Transparent"
                              BorderThickness="0"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="#20FFFFFF"
                              RowBackground="Transparent"
                              AlternatingRowBackground="#08FFFFFF"
                              HeadersVisibility="Column">

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#15FFFFFF"/>
                                <Setter Property="Foreground" Value="#80FFFFFF"/>
                                <Setter Property="Padding" Value="16,12"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="12"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="16,12"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#303B82F6"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="CODIGO" Binding="{Binding MemberCode}" Width="120"/>
                            <DataGridTextColumn Header="MIEMBRO" Binding="{Binding MemberName}" Width="*"/>
                            <DataGridTextColumn Header="PLAN" Binding="{Binding PlanName}" Width="150"/>
                            <DataGridTextColumn Header="INICIO" Binding="{Binding StartDate, StringFormat='dd/MM/yyyy'}" Width="100"/>
                            <DataGridTextColumn Header="VENCE" Binding="{Binding EndDate, StringFormat='dd/MM/yyyy'}" Width="100"/>
                            <DataGridTextColumn Header="DIAS" Binding="{Binding DaysRemainingDisplay}" Width="80"/>
                            <DataGridTextColumn Header="ESTADO" Binding="{Binding StatusDisplay}" Width="120"/>
                            <DataGridTextColumn Header="PAGADO" Binding="{Binding PricePaid, StringFormat='${0:N2}'}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Loading Overlay -->
                    <Border Grid.Row="1"
                            Background="#80000000"
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="⏳" FontSize="48"/>
                            <TextBlock Text="Cargando..." Foreground="White" FontSize="16" Margin="0,12,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
