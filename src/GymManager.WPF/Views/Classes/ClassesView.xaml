<UserControl x:Class="GymManager.WPF.Views.Classes.ClassesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/FluentStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#15FFFFFF" Padding="28,20" CornerRadius="0,0,12,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Clases y Horarios" Style="{StaticResource FluentTitle}"/>
                    <TextBlock Text="Gestion de clases grupales y horarios" 
                               Style="{StaticResource FluentSubtitle}" Margin="0,4,0,0"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="+ Nueva Clase"
                        Command="{Binding NewClassCommand}"
                        Style="{StaticResource FluentButtonSuccess}"
                        Padding="20,12"/>
            </Grid>
        </Border>

        <!-- STATS CARDS -->
        <Grid Grid.Row="1" Margin="28,20,28,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Clases Hoy -->
            <Border Grid.Column="0" Style="{StaticResource FluentCard}" Padding="20" Background="#203B82F6">
                <StackPanel>
                    <TextBlock Text="🏃" FontSize="24"/>
                    <TextBlock Text="{Binding TodayClassesCount}" 
                               FontSize="32" FontWeight="Bold" Foreground="#60A5FA" Margin="0,8,0,0"/>
                    <TextBlock Text="Clases hoy" Foreground="#80FFFFFF" FontSize="12"/>
                </StackPanel>
            </Border>

            <!-- Inscritos -->
            <Border Grid.Column="2" Style="{StaticResource FluentCard}" Padding="20" Background="#2010B981">
                <StackPanel>
                    <TextBlock Text="👥" FontSize="24"/>
                    <TextBlock Text="{Binding TotalEnrollmentsToday}" 
                               FontSize="32" FontWeight="Bold" Foreground="#34D399" Margin="0,8,0,0"/>
                    <TextBlock Text="Inscritos hoy" Foreground="#80FFFFFF" FontSize="12"/>
                </StackPanel>
            </Border>

            <!-- Lugares disponibles -->
            <Border Grid.Column="4" Style="{StaticResource FluentCard}" Padding="20" Background="#20F59E0B">
                <StackPanel>
                    <TextBlock Text="🎯" FontSize="24"/>
                    <TextBlock Text="{Binding AvailableSpotsToday}" 
                               FontSize="32" FontWeight="Bold" Foreground="#FBBF24" Margin="0,8,0,0"/>
                    <TextBlock Text="Lugares disponibles" Foreground="#80FFFFFF" FontSize="12"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- DIAS DE LA SEMANA -->
        <Border Grid.Row="2" Margin="28,20,28,0" Style="{StaticResource FluentCard}" Padding="8">
            <ItemsControl>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="1"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <Button Content="Domingo" Command="{Binding SelectDayCommand}" CommandParameter="0"
                        Style="{StaticResource FluentButtonSecondary}" Margin="4"/>
                <Button Content="Lunes" Command="{Binding SelectDayCommand}" CommandParameter="1"
                        Style="{StaticResource FluentButtonSecondary}" Margin="4"/>
                <Button Content="Martes" Command="{Binding SelectDayCommand}" CommandParameter="2"
                        Style="{StaticResource FluentButtonSecondary}" Margin="4"/>
                <Button Content="Miercoles" Command="{Binding SelectDayCommand}" CommandParameter="3"
                        Style="{StaticResource FluentButtonSecondary}" Margin="4"/>
                <Button Content="Jueves" Command="{Binding SelectDayCommand}" CommandParameter="4"
                        Style="{StaticResource FluentButtonSecondary}" Margin="4"/>
                <Button Content="Viernes" Command="{Binding SelectDayCommand}" CommandParameter="5"
                        Style="{StaticResource FluentButtonSecondary}" Margin="4"/>
                <Button Content="Sabado" Command="{Binding SelectDayCommand}" CommandParameter="6"
                        Style="{StaticResource FluentButtonSecondary}" Margin="4"/>
            </ItemsControl>
        </Border>

        <!-- CONTENT - Lista de clases -->
        <Grid Grid.Row="3" Margin="28,20,28,28">
            <Border Style="{StaticResource FluentCard}" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Toolbar -->
                    <Border Grid.Row="0" Background="#10FFFFFF" Padding="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                       Text="{Binding SelectedDayOfWeek, StringFormat='Horario del dia {0}'}"
                                       Foreground="#FFFFFF" FontSize="16" FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>

                            <Button Grid.Column="1"
                                    Content="🔄 Actualizar"
                                    Command="{Binding RefreshCommand}"
                                    Style="{StaticResource FluentButton}"/>
                        </Grid>
                    </Border>

                    <!-- Lista de clases -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding ClassSchedules}" Margin="16">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#15FFFFFF" CornerRadius="8" Margin="0,0,0,12" Padding="16">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="100"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Hora -->
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding TimeDisplay}" 
                                                           Foreground="#FFFFFF" FontSize="14" FontWeight="Bold"/>
                                            </StackPanel>

                                            <!-- Info clase -->
                                            <StackPanel Grid.Column="1" Margin="16,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <Border Background="{Binding ClassTypeColor}" 
                                                            CornerRadius="4" Padding="8,2" Margin="0,0,8,0">
                                                        <TextBlock Text="{Binding ClassTypeName}" 
                                                                   Foreground="White" FontSize="11" FontWeight="Bold"/>
                                                    </Border>
                                                    <TextBlock Text="{Binding ClassName}" 
                                                               Foreground="#FFFFFF" FontSize="14" FontWeight="SemiBold"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding TrainerName, StringFormat='Instructor: {0}'}" 
                                                           Foreground="#80FFFFFF" FontSize="12" Margin="0,4,0,0"/>
                                                <TextBlock Text="{Binding RoomLocation, StringFormat='📍 {0}'}" 
                                                           Foreground="#60FFFFFF" FontSize="11" Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <!-- Ocupacion -->
                                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding CapacityDisplay}" 
                                                           Foreground="#FFFFFF" FontSize="14" FontWeight="Bold"
                                                           HorizontalAlignment="Center"/>
                                                <ProgressBar Value="{Binding OccupancyPercent}" 
                                                             Maximum="100" Height="4" Margin="0,4,0,0"
                                                             Background="#30FFFFFF" Foreground="#3B82F6"/>
                                                <TextBlock Text="{Binding OccupancyStatus}" 
                                                           Foreground="#80FFFFFF" FontSize="11" 
                                                           HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                            </StackPanel>

                                            <!-- Accion -->
                                            <Button Grid.Column="3" Content="Ver inscritos"
                                                    Style="{StaticResource FluentButtonSecondary}"
                                                    Padding="12,6" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Loading Overlay -->
                    <Border Grid.Row="1"
                            Background="#80000000"
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="⏳" FontSize="48"/>
                            <TextBlock Text="Cargando..." Foreground="White" FontSize="16" Margin="0,12,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
