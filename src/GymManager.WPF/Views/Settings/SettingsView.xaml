<UserControl x:Class="GymManager.WPF.Views.Settings.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:GymManager.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/FluentStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
            <converters:StringToVisibilityConverter x:Key="StringToVisibility"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#15FFFFFF" Padding="28,20" CornerRadius="0,0,12,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Configuracion" Style="{StaticResource FluentTitle}"/>
                    <TextBlock Text="Ajustes de sucursal, planes y preferencias" 
                               Style="{StaticResource FluentSubtitle}" Margin="0,4,0,0"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="💾 Guardar Cambios"
                        Command="{Binding SaveBranchSettingsCommand}"
                        Style="{StaticResource FluentButtonSuccess}"
                        Padding="20,12"/>
            </Grid>
        </Border>

        <!-- CONTENT -->
        <ScrollViewer Grid.Row="1" Margin="28,20,28,28" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- INFORMACIÓN DE SUCURSAL -->
                <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource FluentCard}" Padding="24">
                    <StackPanel>
                        <TextBlock Text="🏢 Informacion de Sucursal" Foreground="#FFFFFF" 
                                   FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16"/>

                        <TextBlock Text="Codigo de Sucursal" Style="{StaticResource FluentLabel}"/>
                        <TextBox Text="{Binding BranchCode, Mode=TwoWay}" 
                                 Style="{StaticResource FluentTextBox}" IsReadOnly="True"
                                 Margin="0,0,0,12"/>

                        <TextBlock Text="Nombre de Sucursal" Style="{StaticResource FluentLabel}"/>
                        <TextBox Text="{Binding BranchName, Mode=TwoWay}" 
                                 Style="{StaticResource FluentTextBox}"
                                 Margin="0,0,0,12"/>

                        <TextBlock Text="Direccion" Style="{StaticResource FluentLabel}"/>
                        <TextBox Text="{Binding BranchAddress, Mode=TwoWay}" 
                                 Style="{StaticResource FluentTextBox}"
                                 Margin="0,0,0,12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Telefono" Style="{StaticResource FluentLabel}"/>
                                <TextBox Text="{Binding BranchPhone, Mode=TwoWay}" 
                                         Style="{StaticResource FluentTextBox}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Email" Style="{StaticResource FluentLabel}"/>
                                <TextBox Text="{Binding BranchEmail, Mode=TwoWay}" 
                                         Style="{StaticResource FluentTextBox}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- PERSONALIZACIÓN -->
                <Border Grid.Row="0" Grid.Column="2" Style="{StaticResource FluentCard}" Padding="24">
                    <StackPanel>
                        <TextBlock Text="🎨 Personalizacion" Foreground="#FFFFFF" 
                                   FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16"/>

                        <TextBlock Text="Nombre Comercial" Style="{StaticResource FluentLabel}"/>
                        <TextBox Text="{Binding BusinessName, Mode=TwoWay}" 
                                 Style="{StaticResource FluentTextBox}"
                                 Margin="0,0,0,12"/>

                        <TextBlock Text="RFC / ID Fiscal" Style="{StaticResource FluentLabel}"/>
                        <TextBox Text="{Binding TaxId, Mode=TwoWay}" 
                                 Style="{StaticResource FluentTextBox}"
                                 Margin="0,0,0,12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Color Primario" Style="{StaticResource FluentLabel}"/>
                                <Grid>
                                    <TextBox Text="{Binding PrimaryColor, Mode=TwoWay}" 
                                             Style="{StaticResource FluentTextBox}"/>
                                    <Border Width="24" Height="24" CornerRadius="4" 
                                            Background="{Binding PrimaryColor}"
                                            HorizontalAlignment="Right" Margin="8,0"/>
                                </Grid>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Color Secundario" Style="{StaticResource FluentLabel}"/>
                                <Grid>
                                    <TextBox Text="{Binding SecondaryColor, Mode=TwoWay}" 
                                             Style="{StaticResource FluentTextBox}"/>
                                    <Border Width="24" Height="24" CornerRadius="4" 
                                            Background="{Binding SecondaryColor}"
                                            HorizontalAlignment="Right" Margin="8,0"/>
                                </Grid>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Logo" Style="{StaticResource FluentLabel}" Margin="0,12,0,0"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Text="{Binding LogoPath}" 
                                     Style="{StaticResource FluentTextBox}" IsReadOnly="True"/>
                            <Button Grid.Column="1" Content="📁 Seleccionar" 
                                    Command="{Binding SelectLogoCommand}"
                                    Style="{StaticResource FluentButtonSecondary}"
                                    Margin="8,0,0,0" Padding="12,8"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- PLANES DE MEMBRESÍA -->
                <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource FluentCard}" Padding="24">
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <TextBlock Text="💳 Planes de Membresia" Foreground="#FFFFFF" 
                                       FontSize="16" FontWeight="SemiBold"/>
                            <Button Content="+ Nuevo" HorizontalAlignment="Right"
                                    Style="{StaticResource FluentButtonSecondary}" Padding="12,4"/>
                        </Grid>

                        <ItemsControl ItemsSource="{Binding MembershipPlans}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#10FFFFFF" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding PlanName}" 
                                                           Foreground="#FFFFFF" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding DurationDisplay}" 
                                                           Foreground="#80FFFFFF" FontSize="11"/>
                                            </StackPanel>
                                            <TextBlock Grid.Column="1" Text="{Binding PriceDisplay}" 
                                                       Foreground="#34D399" FontWeight="Bold" 
                                                       VerticalAlignment="Center" Margin="8,0"/>
                                            <TextBlock Grid.Column="2" Text="{Binding StatusDisplay}" 
                                                       Foreground="#80FFFFFF" FontSize="12"
                                                       VerticalAlignment="Center" Margin="8,0"/>
                                            <Button Grid.Column="3" Content="✏️" 
                                                    Style="{StaticResource FluentButtonSecondary}"
                                                    Padding="8,4" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- MÉTODOS DE PAGO -->
                <Border Grid.Row="2" Grid.Column="2" Style="{StaticResource FluentCard}" Padding="24">
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <TextBlock Text="💰 Metodos de Pago" Foreground="#FFFFFF" 
                                       FontSize="16" FontWeight="SemiBold"/>
                            <Button Content="+ Nuevo" HorizontalAlignment="Right"
                                    Style="{StaticResource FluentButtonSecondary}" Padding="12,4"/>
                        </Grid>

                        <ItemsControl ItemsSource="{Binding PaymentMethods}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#10FFFFFF" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding MethodName}" 
                                                       Foreground="#FFFFFF" FontWeight="SemiBold"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="{Binding StatusDisplay}" 
                                                       Foreground="#80FFFFFF" FontSize="12"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- CATEGORÍAS DE PRODUCTOS -->
                <Border Grid.Row="4" Grid.Column="0" Style="{StaticResource FluentCard}" Padding="24">
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <TextBlock Text="📦 Categorias de Productos" Foreground="#FFFFFF" 
                                       FontSize="16" FontWeight="SemiBold"/>
                            <Button Content="+ Nueva" HorizontalAlignment="Right"
                                    Style="{StaticResource FluentButtonSecondary}" Padding="12,4"/>
                        </Grid>

                        <ItemsControl ItemsSource="{Binding ProductCategories}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#10FFFFFF" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding CategoryName}" 
                                                       Foreground="#FFFFFF" FontWeight="SemiBold"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="{Binding StatusDisplay}" 
                                                       Foreground="#80FFFFFF" FontSize="12"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- INFORMACIÓN DE LICENCIA -->
                <Border Grid.Row="4" Grid.Column="2" Style="{StaticResource FluentCard}" Padding="24">
                    <StackPanel>
                        <TextBlock Text="🔐 Informacion de Licencia" Foreground="#FFFFFF" 
                                   FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Clave:" 
                                       Foreground="#80FFFFFF" Margin="0,0,16,0"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding LicenseKey}" 
                                       Foreground="#FFFFFF" FontFamily="Consolas"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Tipo:" 
                                       Foreground="#80FFFFFF" Margin="0,0,16,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding LicenseType}" 
                                       Foreground="#60A5FA" FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Expira:" 
                                       Foreground="#80FFFFFF" Margin="0,0,16,0"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" 
                                       Text="{Binding LicenseExpiration, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                       Foreground="#FFFFFF"/>

                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Max Sucursales:" 
                                       Foreground="#80FFFFFF" Margin="0,0,16,0"/>
                            <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding MaxBranches}" 
                                       Foreground="#FFFFFF"/>

                            <TextBlock Grid.Row="8" Grid.Column="0" Text="Max Usuarios:" 
                                       Foreground="#80FFFFFF" Margin="0,0,16,0"/>
                            <TextBlock Grid.Row="8" Grid.Column="1" Text="{Binding MaxUsers}" 
                                       Foreground="#FFFFFF"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Mensajes -->
        <Border Grid.Row="1" Background="#2010B981" Padding="16" CornerRadius="8"
                HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20"
                Visibility="{Binding SuccessMessage, Converter={StaticResource StringToVisibility}}">
            <TextBlock Text="{Binding SuccessMessage}" Foreground="#34D399" FontWeight="SemiBold"/>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.Row="1"
                Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="⏳" FontSize="48"/>
                <TextBlock Text="Cargando..." Foreground="White" FontSize="16" Margin="0,12,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
