<UserControl x:Class="GymManager.WPF.Views.Reports.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/FluentStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#15FFFFFF" Padding="28,20" CornerRadius="0,0,12,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Reportes" Style="{StaticResource FluentTitle}"/>
                    <TextBlock Text="Analisis y estadisticas del negocio" 
                               Style="{StaticResource FluentSubtitle}" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="📄 Exportar PDF" 
                            Command="{Binding ExportToPdfCommand}"
                            Style="{StaticResource FluentButton}" Margin="0,0,8,0"/>
                    <Button Content="📊 Exportar Excel" 
                            Command="{Binding ExportToExcelCommand}"
                            Style="{StaticResource FluentButtonSuccess}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- FILTROS DE FECHA -->
        <Border Grid.Row="1" Margin="28,20,28,0" Style="{StaticResource FluentCard}" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Periodo:" Foreground="#FFFFFF" 
                           VerticalAlignment="Center" FontWeight="SemiBold"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="Hoy" Command="{Binding SetDateRangeCommand}" CommandParameter="today"
                            Style="{StaticResource FluentButtonSecondary}" Padding="12,6" Margin="0,0,4,0"/>
                    <Button Content="Semana" Command="{Binding SetDateRangeCommand}" CommandParameter="week"
                            Style="{StaticResource FluentButtonSecondary}" Padding="12,6" Margin="0,0,4,0"/>
                    <Button Content="Mes" Command="{Binding SetDateRangeCommand}" CommandParameter="month"
                            Style="{StaticResource FluentButtonSecondary}" Padding="12,6" Margin="0,0,4,0"/>
                    <Button Content="Trimestre" Command="{Binding SetDateRangeCommand}" CommandParameter="quarter"
                            Style="{StaticResource FluentButtonSecondary}" Padding="12,6" Margin="0,0,4,0"/>
                    <Button Content="Año" Command="{Binding SetDateRangeCommand}" CommandParameter="year"
                            Style="{StaticResource FluentButtonSecondary}" Padding="12,6"/>
                </StackPanel>

                <DatePicker Grid.Column="3" SelectedDate="{Binding DateFrom}" 
                            Style="{StaticResource FluentDatePicker}"/>
                <DatePicker Grid.Column="5" SelectedDate="{Binding DateTo}" 
                            Style="{StaticResource FluentDatePicker}"/>

                <Button Grid.Column="7" Content="🔄 Generar Reporte"
                        Command="{Binding LoadReportDataCommand}"
                        Style="{StaticResource FluentButtonSuccess}" Padding="16,8"/>
            </Grid>
        </Border>

        <!-- CONTENT -->
        <ScrollViewer Grid.Row="2" Margin="28,20,28,28" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- STATS CARDS -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Ingresos Totales -->
                    <Border Grid.Column="0" Style="{StaticResource FluentCard}" Padding="20" Background="#2010B981">
                        <StackPanel>
                            <TextBlock Text="💰" FontSize="24"/>
                            <TextBlock Text="{Binding TotalRevenue, StringFormat='${0:N2}'}" 
                                       FontSize="24" FontWeight="Bold" Foreground="#34D399" Margin="0,8,0,0"/>
                            <TextBlock Text="Ingresos Totales" Foreground="#80FFFFFF" FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <!-- Membresias -->
                    <Border Grid.Column="2" Style="{StaticResource FluentCard}" Padding="20" Background="#203B82F6">
                        <StackPanel>
                            <TextBlock Text="💳" FontSize="24"/>
                            <TextBlock Text="{Binding MembershipRevenue, StringFormat='${0:N2}'}" 
                                       FontSize="24" FontWeight="Bold" Foreground="#60A5FA" Margin="0,8,0,0"/>
                            <TextBlock Text="Por Membresias" Foreground="#80FFFFFF" FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <!-- Ventas -->
                    <Border Grid.Column="4" Style="{StaticResource FluentCard}" Padding="20" Background="#208B5CF6">
                        <StackPanel>
                            <TextBlock Text="🛒" FontSize="24"/>
                            <TextBlock Text="{Binding SalesRevenue, StringFormat='${0:N2}'}" 
                                       FontSize="24" FontWeight="Bold" Foreground="#A78BFA" Margin="0,8,0,0"/>
                            <TextBlock Text="Por Ventas" Foreground="#80FFFFFF" FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <!-- Nuevos Miembros -->
                    <Border Grid.Column="6" Style="{StaticResource FluentCard}" Padding="20" Background="#20F59E0B">
                        <StackPanel>
                            <TextBlock Text="👥" FontSize="24"/>
                            <TextBlock Text="{Binding NewMembersCount}" 
                                       FontSize="24" FontWeight="Bold" Foreground="#FBBF24" Margin="0,8,0,0"/>
                            <TextBlock Text="Nuevos Miembros" Foreground="#80FFFFFF" FontSize="12"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- SEGUNDA FILA DE STATS -->
                <Grid Grid.Row="1" Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Membresias Activas -->
                    <Border Grid.Column="0" Style="{StaticResource FluentCard}" Padding="20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="🎫" FontSize="40" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" Margin="16,0,0,0">
                                <TextBlock Text="{Binding ActiveMembershipsCount}" 
                                           FontSize="32" FontWeight="Bold" Foreground="#FFFFFF"/>
                                <TextBlock Text="Membresias Activas" Foreground="#80FFFFFF" FontSize="14"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Asistencias -->
                    <Border Grid.Column="2" Style="{StaticResource FluentCard}" Padding="20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="✅" FontSize="40" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" Margin="16,0,0,0">
                                <TextBlock Text="{Binding TotalAttendances}" 
                                           FontSize="32" FontWeight="Bold" Foreground="#FFFFFF"/>
                                <TextBlock Text="Check-ins en el periodo" Foreground="#80FFFFFF" FontSize="14"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <!-- TABLAS DE DATOS -->
                <Grid Grid.Row="2" Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Top Productos -->
                    <Border Grid.Column="0" Style="{StaticResource FluentCard}" Padding="20">
                        <StackPanel>
                            <TextBlock Text="🏆 Top Productos" Foreground="#FFFFFF" FontSize="16" 
                                       FontWeight="SemiBold" Margin="0,0,0,12"/>
                            <ItemsControl ItemsSource="{Binding TopProducts}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding ProductName}" 
                                                       Foreground="#E2E8F0" FontSize="13"/>
                                            <TextBlock Grid.Column="1" Text="{Binding QuantitySold, StringFormat='{}{0} uds'}" 
                                                       Foreground="#80FFFFFF" FontSize="12" Margin="8,0"/>
                                            <TextBlock Grid.Column="2" Text="{Binding TotalRevenue, StringFormat='${0:N0}'}" 
                                                       Foreground="#34D399" FontSize="13" FontWeight="SemiBold"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Membresias por Plan -->
                    <Border Grid.Column="2" Style="{StaticResource FluentCard}" Padding="20">
                        <StackPanel>
                            <TextBlock Text="📊 Membresias por Plan" Foreground="#FFFFFF" FontSize="16" 
                                       FontWeight="SemiBold" Margin="0,0,0,12"/>
                            <ItemsControl ItemsSource="{Binding MembershipsByPlan}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding PlanName}" 
                                                       Foreground="#E2E8F0" FontSize="13"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Count, StringFormat='{}{0} activas'}" 
                                                       Foreground="#60A5FA" FontSize="13" FontWeight="SemiBold"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Loading Overlay -->
                <Border Grid.Row="0" Grid.RowSpan="3"
                        Background="#80000000"
                        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="⏳" FontSize="48"/>
                        <TextBlock Text="Generando reporte..." Foreground="White" FontSize="16" Margin="0,12,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
