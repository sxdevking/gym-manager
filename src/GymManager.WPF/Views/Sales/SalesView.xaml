<UserControl x:Class="GymManager.WPF.Views.Sales.SalesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/FluentStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#15FFFFFF" Padding="28,20" CornerRadius="0,0,12,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Ventas" Style="{StaticResource FluentTitle}"/>
                    <TextBlock Text="Punto de venta e historial de transacciones" 
                               Style="{StaticResource FluentSubtitle}" Margin="0,4,0,0"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="+ Nueva Venta"
                        Command="{Binding NewSaleCommand}"
                        Style="{StaticResource FluentButtonSuccess}"
                        Padding="20,12"/>
            </Grid>
        </Border>

        <!-- STATS CARDS -->
        <Grid Grid.Row="1" Margin="28,20,28,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Ventas Hoy -->
            <Border Grid.Column="0" Style="{StaticResource FluentCard}" Padding="20" Background="#2010B981">
                <StackPanel>
                    <TextBlock Text="🛒" FontSize="24"/>
                    <TextBlock Text="{Binding TodayTotal, StringFormat='${0:N2}'}" 
                               FontSize="28" FontWeight="Bold" Foreground="#34D399" Margin="0,8,0,0"/>
                    <TextBlock Text="{Binding TodayCount, StringFormat='{}{0} ventas hoy'}" 
                               Foreground="#80FFFFFF" FontSize="12"/>
                </StackPanel>
            </Border>

            <!-- Semana -->
            <Border Grid.Column="2" Style="{StaticResource FluentCard}" Padding="20" Background="#203B82F6">
                <StackPanel>
                    <TextBlock Text="📈" FontSize="24"/>
                    <TextBlock Text="{Binding WeekTotal, StringFormat='${0:N2}'}" 
                               FontSize="28" FontWeight="Bold" Foreground="#60A5FA" Margin="0,8,0,0"/>
                    <TextBlock Text="Esta semana" Foreground="#80FFFFFF" FontSize="12"/>
                </StackPanel>
            </Border>

            <!-- Mes -->
            <Border Grid.Column="4" Style="{StaticResource FluentCard}" Padding="20" Background="#208B5CF6">
                <StackPanel>
                    <TextBlock Text="📊" FontSize="24"/>
                    <TextBlock Text="{Binding MonthTotal, StringFormat='${0:N2}'}" 
                               FontSize="28" FontWeight="Bold" Foreground="#A78BFA" Margin="0,8,0,0"/>
                    <TextBlock Text="Este mes" Foreground="#80FFFFFF" FontSize="12"/>
                </StackPanel>
            </Border>

            <!-- Acciones -->
            <Border Grid.Column="6" Style="{StaticResource FluentCard}" Padding="16">
                <StackPanel>
                    <TextBlock Text="Acciones rapidas" Foreground="#80FFFFFF" FontSize="12" Margin="0,0,0,8"/>
                    <Button Content="🧾 Ver Inventario" 
                            Style="{StaticResource FluentButtonSecondary}" 
                            Padding="16,8" HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- CONTENT -->
        <Grid Grid.Row="2" Margin="28,20,28,28">
            <Border Style="{StaticResource FluentCard}" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Toolbar -->
                    <Border Grid.Row="0" Background="#10FFFFFF" Padding="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Busqueda -->
                            <TextBox Grid.Column="0"
                                     Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FluentTextBox}"
                                     Tag="Buscar ticket o miembro..."/>

                            <!-- Fecha Desde -->
                            <DatePicker Grid.Column="2"
                                        SelectedDate="{Binding FilterDateFrom}"
                                        Style="{StaticResource FluentDatePicker}"/>

                            <!-- Fecha Hasta -->
                            <DatePicker Grid.Column="4"
                                        SelectedDate="{Binding FilterDateTo}"
                                        Style="{StaticResource FluentDatePicker}"/>

                            <!-- Refresh -->
                            <Button Grid.Column="6"
                                    Content="🔄 Actualizar"
                                    Command="{Binding RefreshCommand}"
                                    Style="{StaticResource FluentButton}"/>
                        </Grid>
                    </Border>

                    <!-- DataGrid -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Sales}"
                              SelectedItem="{Binding SelectedSale}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              Background="Transparent"
                              BorderThickness="0"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="#20FFFFFF"
                              RowBackground="Transparent"
                              AlternatingRowBackground="#08FFFFFF"
                              HeadersVisibility="Column">

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#15FFFFFF"/>
                                <Setter Property="Foreground" Value="#80FFFFFF"/>
                                <Setter Property="Padding" Value="16,12"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="12"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="16,12"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#303B82F6"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="FECHA" Binding="{Binding DateDisplay}" Width="140"/>
                            <DataGridTextColumn Header="TICKET" Binding="{Binding TicketNumber}" Width="150"/>
                            <DataGridTextColumn Header="CLIENTE" Binding="{Binding MemberName}" Width="*"/>
                            <DataGridTextColumn Header="PRODUCTOS" Binding="{Binding ItemsDisplay}" Width="120"/>
                            <DataGridTextColumn Header="SUBTOTAL" Binding="{Binding Subtotal, StringFormat='${0:N2}'}" Width="100"/>
                            <DataGridTextColumn Header="TOTAL" Binding="{Binding TotalDisplay}" Width="100"/>
                            <DataGridTextColumn Header="ESTADO" Binding="{Binding StatusDisplay}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Loading Overlay -->
                    <Border Grid.Row="1"
                            Background="#80000000"
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="⏳" FontSize="48"/>
                            <TextBlock Text="Cargando..." Foreground="White" FontSize="16" Margin="0,12,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
