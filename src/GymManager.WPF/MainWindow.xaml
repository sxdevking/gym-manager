<Window x:Class="GymManager.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:GymManager.WPF.Views.Members"
        xmlns:membershipsViews="clr-namespace:GymManager.WPF.Views.Memberships"
        xmlns:paymentsViews="clr-namespace:GymManager.WPF.Views.Payments"
        xmlns:salesViews="clr-namespace:GymManager.WPF.Views.Sales"
        xmlns:classesViews="clr-namespace:GymManager.WPF.Views.Classes"
        xmlns:reportsViews="clr-namespace:GymManager.WPF.Views.Reports"
        xmlns:settingsViews="clr-namespace:GymManager.WPF.Views.Settings"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Height="800" Width="1400"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        Background="#0F172A">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Estilo para botones del menu -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="0">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1E293B"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Grid.Column="0" Background="#1E293B">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo -->
                <StackPanel Grid.Row="0" Margin="24,24,24,16">
                    <TextBlock Text="💪 GymManager" 
                               FontSize="22" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="{Binding BranchName}" 
                               FontSize="12" 
                               Foreground="#64748B" 
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Menu -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Separador -->
                        <TextBlock Text="PRINCIPAL" 
                                   FontSize="11" 
                                   Foreground="#475569" 
                                   Margin="24,16,0,8"
                                   FontWeight="SemiBold"/>

                        <!-- Dashboard -->
                        <Button Style="{StaticResource MenuButtonStyle}"
                                Command="{Binding NavigateToDashboardCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" Width="24"/>
                                <TextBlock Text="Dashboard" Margin="12,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Miembros -->
                        <Button Style="{StaticResource MenuButtonStyle}"
                                Command="{Binding NavigateToMembersCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👥" Width="24"/>
                                <TextBlock Text="Miembros" Margin="12,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Separador -->
                        <TextBlock Text="OPERACIONES" 
                                   FontSize="11" 
                                   Foreground="#475569" 
                                   Margin="24,20,0,8"
                                   FontWeight="SemiBold"/>

                        <!-- Membresias -->
                        <Button Style="{StaticResource MenuButtonStyle}"
                                Command="{Binding NavigateToMembershipsCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💳" Width="24"/>
                                <TextBlock Text="Membresias" Margin="12,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Pagos -->
                        <Button Style="{StaticResource MenuButtonStyle}"
                                Command="{Binding NavigateToPaymentsCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💰" Width="24"/>
                                <TextBlock Text="Pagos" Margin="12,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Ventas -->
                        <Button Style="{StaticResource MenuButtonStyle}"
                                Command="{Binding NavigateToSalesCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🛒" Width="24"/>
                                <TextBlock Text="Ventas" Margin="12,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Clases -->
                        <Button Style="{StaticResource MenuButtonStyle}"
                                Command="{Binding NavigateToClassesCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🏃" Width="24"/>
                                <TextBlock Text="Clases" Margin="12,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Separador -->
                        <TextBlock Text="SISTEMA" 
                                   FontSize="11" 
                                   Foreground="#475569" 
                                   Margin="24,20,0,8"
                                   FontWeight="SemiBold"/>

                        <!-- Reportes -->
                        <Button Style="{StaticResource MenuButtonStyle}"
                                Command="{Binding NavigateToReportsCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📈" Width="24"/>
                                <TextBlock Text="Reportes" Margin="12,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Configuracion -->
                        <Button Style="{StaticResource MenuButtonStyle}"
                                Command="{Binding NavigateToSettingsCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚙️" Width="24"/>
                                <TextBlock Text="Configuracion" Margin="12,0,0,0"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <!-- Usuario -->
                <Border Grid.Row="2" Background="#15FFFFFF" Padding="16">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="40" Height="40" CornerRadius="20" Background="#3B82F6">
                            <TextBlock Text="A" 
                                       Foreground="White" 
                                       FontWeight="Bold" 
                                       FontSize="18"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="{Binding UserName}" 
                                       Foreground="White" 
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="Administrador" 
                                       Foreground="#64748B" 
                                       FontSize="11"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- CONTENIDO PRINCIPAL -->
        <Grid Grid.Column="1" Background="#0F172A">

            <!-- DASHBOARD -->
            <ScrollViewer Visibility="{Binding ShowDashboard, Converter={StaticResource BoolToVisibilityConverter}}"
                          VerticalScrollBarVisibility="Auto" Padding="32">
                <StackPanel>
                    <!-- Header -->
                    <TextBlock Text="Dashboard" FontSize="28" FontWeight="Bold" Foreground="White" Margin="0,0,0,8"/>
                    <TextBlock Text="Resumen general del gimnasio" Foreground="#64748B" FontSize="14" Margin="0,0,0,24"/>

                    <!-- Stats Cards -->
                    <WrapPanel>
                        <!-- Total Miembros -->
                        <Border Background="#1E293B" CornerRadius="12" Padding="20" Margin="0,0,16,16" Width="200">
                            <StackPanel>
                                <TextBlock Text="👥" FontSize="28"/>
                                <TextBlock Text="{Binding TotalMembers}" FontSize="32" FontWeight="Bold" Foreground="#3B82F6" Margin="0,8,0,0"/>
                                <TextBlock Text="Total Miembros" Foreground="#64748B" FontSize="12" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Membresias Activas -->
                        <Border Background="#1E293B" CornerRadius="12" Padding="20" Margin="0,0,16,16" Width="200">
                            <StackPanel>
                                <TextBlock Text="✅" FontSize="28"/>
                                <TextBlock Text="{Binding ActiveMembers}" FontSize="32" FontWeight="Bold" Foreground="#10B981" Margin="0,8,0,0"/>
                                <TextBlock Text="Membresias Activas" Foreground="#64748B" FontSize="12" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Asistencia Hoy -->
                        <Border Background="#1E293B" CornerRadius="12" Padding="20" Margin="0,0,16,16" Width="200">
                            <StackPanel>
                                <TextBlock Text="🚪" FontSize="28"/>
                                <TextBlock Text="{Binding TodayAttendance}" FontSize="32" FontWeight="Bold" Foreground="#F59E0B" Margin="0,8,0,0"/>
                                <TextBlock Text="Asistencia Hoy" Foreground="#64748B" FontSize="12" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Ingresos del Mes -->
                        <Border Background="#1E293B" CornerRadius="12" Padding="20" Margin="0,0,16,16" Width="200">
                            <StackPanel>
                                <TextBlock Text="💰" FontSize="28"/>
                                <TextBlock Text="{Binding MonthlyRevenue, StringFormat='${0:N0}'}" FontSize="32" FontWeight="Bold" Foreground="#8B5CF6" Margin="0,8,0,0"/>
                                <TextBlock Text="Ingresos del Mes" Foreground="#64748B" FontSize="12" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Por Vencer -->
                        <Border Background="#1E293B" CornerRadius="12" Padding="20" Margin="0,0,16,16" Width="200">
                            <StackPanel>
                                <TextBlock Text="⚠️" FontSize="28"/>
                                <TextBlock Text="{Binding ExpiringMemberships}" FontSize="32" FontWeight="Bold" Foreground="#EF4444" Margin="0,8,0,0"/>
                                <TextBlock Text="Por Vencer (7 dias)" Foreground="#64748B" FontSize="12" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Clases Programadas -->
                        <Border Background="#1E293B" CornerRadius="12" Padding="20" Margin="0,0,16,16" Width="200">
                            <StackPanel>
                                <TextBlock Text="🏃" FontSize="28"/>
                                <TextBlock Text="{Binding ScheduledClasses}" FontSize="32" FontWeight="Bold" Foreground="#06B6D4" Margin="0,8,0,0"/>
                                <TextBlock Text="Clases Hoy" Foreground="#64748B" FontSize="12" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </WrapPanel>

                    <!-- Boton Actualizar -->
                    <Button Content="🔄 Actualizar Estadisticas"
                            Command="{Binding LoadDashboardCommand}"
                            HorizontalAlignment="Left"
                            Margin="0,16,0,0"
                            Padding="20,12"
                            Background="#3B82F6"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="8"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Status Bar -->
                    <Border Background="#1E293B" CornerRadius="8" Padding="16,10" Margin="0,24,0,0">
                        <Grid>
                            <TextBlock Text="{Binding StatusMessage}" Foreground="#64748B" FontSize="12" HorizontalAlignment="Left"/>
                            <TextBlock Foreground="#64748B" FontSize="12" HorizontalAlignment="Right">
                                <Run Text="Version 1.0"/>
                                <Run Text=" | "/>
                                <Run Text="PostgreSQL Conectado"/>
                            </TextBlock>
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- MIEMBROS -->
            <views:MembersView x:Name="MembersViewControl"
                               Visibility="{Binding DataContext.ShowMembers, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <!-- MEMBRESIAS -->
            <membershipsViews:MembershipsView x:Name="MembershipsViewControl"
                               Visibility="{Binding DataContext.ShowMemberships, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <!-- PAGOS -->
            <paymentsViews:PaymentsView x:Name="PaymentsViewControl"
                               Visibility="{Binding DataContext.ShowPayments, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <!-- VENTAS -->
            <salesViews:SalesView x:Name="SalesViewControl"
                               Visibility="{Binding DataContext.ShowSales, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <!-- CLASES -->
            <classesViews:ClassesView x:Name="ClassesViewControl"
                               Visibility="{Binding DataContext.ShowClasses, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <!-- REPORTES -->
            <reportsViews:ReportsView x:Name="ReportsViewControl"
                               Visibility="{Binding DataContext.ShowReports, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <!-- CONFIGURACION -->
            <settingsViews:SettingsView x:Name="SettingsViewControl"
                               Visibility="{Binding DataContext.ShowSettings, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVisibilityConverter}}"/>

        </Grid>
    </Grid>
</Window>
