<Window x:Class="GymManager.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Height="720" Width="1280"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#0F172A">

    <Window.Resources>
        <!-- Estilo para botones del menu -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Margin="8,2">
                            <ContentPresenter HorizontalAlignment="Left" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1E293B"/>
                                <Setter Property="Foreground" Value="#F8FAFC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para botones activos del menu -->
        <Style x:Key="MenuButtonActiveStyle" TargetType="Button" BasedOn="{StaticResource MenuButtonStyle}">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>

        <!-- Estilo para tarjetas de estadisticas -->
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="8"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ═══════════════════════════════════════════════════════════ -->
        <!-- PANEL LATERAL (SIDEBAR) -->
        <!-- ═══════════════════════════════════════════════════════════ -->
        <Border Grid.Column="0" Background="#1E293B">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo y Nombre -->
                <StackPanel Grid.Row="0" Margin="20" HorizontalAlignment="Center">
                    <TextBlock Text="GymManager" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#F8FAFC"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding BranchName}" 
                               FontSize="12" 
                               Foreground="#64748B"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Menu de Navegacion -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,10">

                        <!-- Dashboard -->
                        <Button Style="{StaticResource MenuButtonStyle}"
                                Command="{Binding NavigateToDashboardCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="[D]" Width="24" FontWeight="Bold" Foreground="#3B82F6"/>
                                <TextBlock Text="Dashboard" Margin="12,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Separador -->
                        <TextBlock Text="GESTION" 
                                   FontSize="11" 
                                   Foreground="#475569" 
                                   Margin="24,20,0,8"
                                   FontWeight="SemiBold"/>

                        <!-- Miembros -->
                        <Button Style="{StaticResource MenuButtonStyle}"
                                Command="{Binding NavigateToMembersCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="[M]" Width="24" FontWeight="Bold" Foreground="#10B981"/>
                                <TextBlock Text="Miembros" Margin="12,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Membresías -->
                        <Button Style="{StaticResource MenuButtonStyle}"
                                Command="{Binding NavigateToMembershipsCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="[B]" Width="24" FontWeight="Bold" Foreground="#8B5CF6"/>
                                <TextBlock Text="Membresías" Margin="12,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Pagos -->
                        <Button Style="{StaticResource MenuButtonStyle}"
                                Command="{Binding NavigateToPaymentsCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="[$]" Width="24" FontWeight="Bold" Foreground="#F59E0B"/>
                                <TextBlock Text="Pagos" Margin="12,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Separador -->
                        <TextBlock Text="OPERACIONES" 
                                   FontSize="11" 
                                   Foreground="#475569" 
                                   Margin="24,20,0,8"
                                   FontWeight="SemiBold"/>

                        <!-- Ventas -->
                        <Button Style="{StaticResource MenuButtonStyle}"
                                Command="{Binding NavigateToSalesCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="[V]" Width="24" FontWeight="Bold" Foreground="#EC4899"/>
                                <TextBlock Text="Ventas" Margin="12,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Clases -->
                        <Button Style="{StaticResource MenuButtonStyle}"
                                Command="{Binding NavigateToClassesCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="[C]" Width="24" FontWeight="Bold" Foreground="#06B6D4"/>
                                <TextBlock Text="Clases" Margin="12,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Separador -->
                        <TextBlock Text="SISTEMA" 
                                   FontSize="11" 
                                   Foreground="#475569" 
                                   Margin="24,20,0,8"
                                   FontWeight="SemiBold"/>

                        <!-- Reportes -->
                        <Button Style="{StaticResource MenuButtonStyle}"
                                Command="{Binding NavigateToReportsCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="[R]" Width="24" FontWeight="Bold" Foreground="#F97316"/>
                                <TextBlock Text="Reportes" Margin="12,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Configuración -->
                        <Button Style="{StaticResource MenuButtonStyle}"
                                Command="{Binding NavigateToSettingsCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="[S]" Width="24" FontWeight="Bold" Foreground="#6B7280"/>
                                <TextBlock Text="Configuracion" Margin="12,0,0,0"/>
                            </StackPanel>
                        </Button>

                    </StackPanel>
                </ScrollViewer>

                <!-- Usuario Actual -->
                <Border Grid.Row="2" 
                        Background="#0F172A" 
                        CornerRadius="8" 
                        Margin="12" 
                        Padding="12">
                    <StackPanel>
                        <TextBlock Text="{Binding UserName}" 
                                   Foreground="#F8FAFC" 
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="Administrador" 
                                   Foreground="#64748B" 
                                   FontSize="12"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- ═══════════════════════════════════════════════════════════ -->
        <!-- AREA DE CONTENIDO PRINCIPAL -->
        <!-- ═══════════════════════════════════════════════════════════ -->
        <Grid Grid.Column="1" Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,24">
                <TextBlock Text="Dashboard" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#F8FAFC"/>
                <TextBlock Text="Resumen general del gimnasio" 
                           FontSize="14" 
                           Foreground="#64748B"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Contenido del Dashboard -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- Fila de Estadisticas -->
                    <TextBlock Text="Estadisticas de Hoy" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Foreground="#94A3B8"
                               Margin="8,0,0,12"/>

                    <WrapPanel>
                        <!-- Tarjeta: Total Miembros -->
                        <Border Style="{StaticResource StatCardStyle}" Width="240">
                            <StackPanel>
                                <TextBlock Text="Total Miembros" 
                                           Foreground="#94A3B8" 
                                           FontSize="13"/>
                                <TextBlock Text="{Binding TotalMembers}" 
                                           Foreground="#F8FAFC" 
                                           FontSize="36" 
                                           FontWeight="Bold"
                                           Margin="0,8,0,0"/>
                                <TextBlock Text="registrados en el sistema" 
                                           Foreground="#64748B" 
                                           FontSize="12"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Tarjeta: Miembros Activos -->
                        <Border Style="{StaticResource StatCardStyle}" Width="240">
                            <StackPanel>
                                <TextBlock Text="Miembros Activos" 
                                           Foreground="#94A3B8" 
                                           FontSize="13"/>
                                <TextBlock Text="{Binding ActiveMembers}" 
                                           Foreground="#10B981" 
                                           FontSize="36" 
                                           FontWeight="Bold"
                                           Margin="0,8,0,0"/>
                                <TextBlock Text="con membresia vigente" 
                                           Foreground="#64748B" 
                                           FontSize="12"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Tarjeta: Asistencia Hoy -->
                        <Border Style="{StaticResource StatCardStyle}" Width="240">
                            <StackPanel>
                                <TextBlock Text="Asistencia Hoy" 
                                           Foreground="#94A3B8" 
                                           FontSize="13"/>
                                <TextBlock Text="{Binding TodayAttendance}" 
                                           Foreground="#3B82F6" 
                                           FontSize="36" 
                                           FontWeight="Bold"
                                           Margin="0,8,0,0"/>
                                <TextBlock Text="check-ins registrados" 
                                           Foreground="#64748B" 
                                           FontSize="12"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Tarjeta: Ingresos del Mes -->
                        <Border Style="{StaticResource StatCardStyle}" Width="240">
                            <StackPanel>
                                <TextBlock Text="Ingresos del Mes" 
                                           Foreground="#94A3B8" 
                                           FontSize="13"/>
                                <TextBlock Foreground="#F59E0B" 
                                           FontSize="36" 
                                           FontWeight="Bold"
                                           Margin="0,8,0,0">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="${0:N0}">
                                            <Binding Path="MonthlyRevenue"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                                <TextBlock Text="recaudados este mes" 
                                           Foreground="#64748B" 
                                           FontSize="12"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </WrapPanel>

                    <!-- Segunda Fila -->
                    <TextBlock Text="Alertas y Pendientes" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Foreground="#94A3B8"
                               Margin="8,24,0,12"/>

                    <WrapPanel>
                        <!-- Tarjeta: Membresias por Vencer -->
                        <Border Style="{StaticResource StatCardStyle}" Width="240">
                            <StackPanel>
                                <TextBlock Text="Por Vencer (7 dias)" 
                                           Foreground="#94A3B8" 
                                           FontSize="13"/>
                                <TextBlock Text="{Binding ExpiringMemberships}" 
                                           Foreground="#EF4444" 
                                           FontSize="36" 
                                           FontWeight="Bold"
                                           Margin="0,8,0,0"/>
                                <TextBlock Text="membresias proximas a expirar" 
                                           Foreground="#64748B" 
                                           FontSize="12"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Tarjeta: Clases Hoy -->
                        <Border Style="{StaticResource StatCardStyle}" Width="240">
                            <StackPanel>
                                <TextBlock Text="Clases Hoy" 
                                           Foreground="#94A3B8" 
                                           FontSize="13"/>
                                <TextBlock Text="{Binding ScheduledClasses}" 
                                           Foreground="#8B5CF6" 
                                           FontSize="36" 
                                           FontWeight="Bold"
                                           Margin="0,8,0,0"/>
                                <TextBlock Text="clases programadas" 
                                           Foreground="#64748B" 
                                           FontSize="12"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </WrapPanel>

                    <!-- Boton Actualizar -->
                    <Button Content="Actualizar Estadisticas"
                            Command="{Binding LoadDashboardCommand}"
                            HorizontalAlignment="Left"
                            Margin="8,24,0,0"
                            Padding="20,12"
                            Background="#3B82F6"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="8"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </StackPanel>
            </ScrollViewer>

            <!-- Status Bar -->
            <Border Grid.Row="2" 
                    Background="#1E293B" 
                    CornerRadius="8" 
                    Padding="16,10"
                    Margin="0,16,0,0">
                <Grid>
                    <TextBlock Text="{Binding StatusMessage}" 
                               Foreground="#64748B" 
                               FontSize="12"
                               HorizontalAlignment="Left"/>
                    <TextBlock Foreground="#64748B" 
                               FontSize="12"
                               HorizontalAlignment="Right">
                        <Run Text="Version 1.0"/>
                        <Run Text=" | "/>
                        <Run Text="PostgreSQL Conectado"/>
                    </TextBlock>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>